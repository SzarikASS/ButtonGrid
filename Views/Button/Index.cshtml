@model IEnumerable<ButtonGrid.Models.ButtonModel>
<style>

    .game-button{
        width: 74px;
        border: none;
    }

    .game-button-image {
        width: 70%;
    }

    .container{
        display:flex;
        flex-wrap:wrap;
    }

    .line{
        flex-basis:100%;
        height:0;
    }

    .label{
        font-size:8px;
        text-align:center;
    }

</style>

@{ 
    string[] imagenames = { "blueb.png", "greenb.png", "orangeb.png", "pinkb.png" };
    
}



<form>

<div class="container">
@for(int i = 0; i<Model.Count(); i++)
{
   

    if(i%5==0)
    {
        <div class="line"></div>
    }

    <div class="oneButton" id=@i>
    <button class="game-button" name="buttonNumber" value="@Model.ElementAt(i).Id" type="submit" asp-controller="Button" asp-action="HandleButtonClick">

        <img class="game-button-image" src="~/img/@imagenames[Model.ElementAt(i).ButtonState]">

        <div class="label">

             @Model.ElementAt(i).Id, @Model.ElementAt(i).ButtonState
        </div>

    </button>
    </div>
}

</div>
</form>

<div id="messageArea">

<p>Not all buttons match</p>

</div>
